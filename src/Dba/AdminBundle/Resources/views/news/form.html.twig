{% extends 'DbaAdminBundle::base.html.twig' %}

{% block body %}
  {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
  <form id="news-form" class="form-horizontal" method="post" action="{{ currentPath }}" autocomplete="off">
    <div class="col-sm-10 col-sm-offset-2">
      <img id="news-image-displayed" />
    </div>

    {{ form_row(form.image) }}
    {{ form_row(form.enabled) }}
    {{ form_row(form.subject) }}

    {{ form_row(form.message) }}

    {{ form_widget(form._token) }}

    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">{{ 'save' | trans }}</button>
    </div>
  </form>
{% endblock %}

{% block javascripts %}
  <script type="text/javascript">
    DbaAdmin.news($('#{{ form.image.vars.id }}'), $('#{{ form.message.vars.id }}'));
  </script>
{% endblock %}
