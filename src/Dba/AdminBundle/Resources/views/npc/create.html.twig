{% extends 'DbaAdminBundle::base.html.twig' %}

{% block body %}
  <form class="form-horizontal" method="post" action="{{ path('admin.npc.create') }}">
    <div class="col-sm-10 col-sm-offset-2">
      <img id="npc-image-displayed" />
    </div>

    {{ form_row(form.name) }}
    {{ form_row(form.type) }}
    {{ form_row(form.number) }}

    {{ form_row(form.level) }}
    {{ form_row(form.map) }}

    {{ form_widget(form._token) }}

    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">{{ 'save' | trans }}</button>
    </div>
  </form>
{% endblock %}
