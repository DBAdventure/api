{% extends 'DbaAdminBundle::base.html.twig' %}
{% import "DbaAdminBundle::default/macros.html.twig" as helper %}

{% block body %}
  {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
  <form id="quest-form" class="form-horizontal" method="post" action="{{ currentPath }}" autocomplete="off">
    <div class="col-sm-10 col-sm-offset-2">
      <img id="quest-image-displayed" />
    </div>

    {{ form_row(form.name) }}
    {{ form_row(form.luck) }}

    <h3>{{ 'quest.object.npc.list' | trans }}</h3>
    <div id="npcList" data-prototype="{{ form_widget(form.list.vars.prototype) | escape }}">
      {% for widget in form.list.children %}
        {{ form_widget(widget) }}
      {% endfor %}
    </div>

    <div class="text-center">
      <button class="btn btn-default btn-add" data-target="npcList">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        {{ 'form.add.npc' | trans }}
      </button>
      <div class="clearfix">&nbsp;</div>
    </div>

    {{ form_widget(form._token) }}

    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">{{ 'save' | trans }}</button>
    </div>
  </form>
{% endblock %}

{% block javascripts %}
  <script type="text/javascript">
    DbaAdmin.questObject();
  </script>
{% endblock %}
