{% extends 'DbaAdminBundle::base.html.twig' %}
{% import "DbaAdminBundle::default/macros.html.twig" as helper %}

{% block body %}
  {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
  <form id="quest-form" class="form-horizontal" method="post" action="{{ currentPath }}" autocomplete="off">
    <div class="col-sm-10 col-sm-offset-2">
      <img id="quest-image-displayed" />
    </div>

    {{ form_row(form.image) }}
    {{ form_row(form.name) }}
    {{ form_row(form.npcName) }}
    {{ form_row(form.enabled) }}
    {{ form_row(form.history) }}

    {{ form_row(form.map) }}
    {{ form_row(form.x) }}
    {{ form_row(form.y) }}
    {{ form_row(form.gainZeni) }}
    {{ form_row(form.gainBattlePoints) }}

    <div class="text-center">
      <button class="btn btn-default btn-add" data-target="requirements">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        {{ 'form.add.requirements' | trans }}
      </button>
      <div class="clearfix">&nbsp;</div>
    </div>

    <div id="requirements" data-prototype="{{ helper.widget_prototype(form.requirements, 'form.remove') | escape }}">
      {% for widget in form.requirements.children %}
        {{ helper.widget_prototype(widget, 'form.remove')}}
      {% endfor %}
    </div>


    <div class="text-center">
      <button class="btn btn-default btn-add" data-target="gainObjects">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        {{ 'form.add.gainObjects' | trans }}
      </button>
      <div class="clearfix">&nbsp;</div>
    </div>

    <div id="gainObjects" data-prototype="{{ helper.widget_prototype(form.gainObjects, 'form.remove', 'object', 'number') | escape }}">
      {% for widget in form.gainObjects.children %}
        {{ helper.widget_prototype(widget, 'form.remove', 'object', 'number')}}
      {% endfor %}
    </div>

    <div class="text-center">
      <button class="btn btn-default btn-add" data-target="npcNeeded">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        {{ 'form.add.npcNeeded' | trans }}
      </button>
      <div class="clearfix">&nbsp;</div>
    </div>

    <div id="npcNeeded" data-prototype="{{ helper.widget_prototype(form.npcNeeded, 'form.remove', 'race', 'number') | escape }}">
      {% for widget in form.npcNeeded.children %}
        {{ helper.widget_prototype(widget, 'form.remove', 'race', 'number')}}
      {% endfor %}
    </div>

    <div class="text-center">
      <button class="btn btn-default btn-add" data-target="npcObjectsNeeded">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        {{ 'form.add.npcObjectsNeeded' | trans }}
      </button>
      <div class="clearfix">&nbsp;</div>
    </div>

    <div id="npcObjectsNeeded" data-prototype="{{ helper.widget_prototype(form.npcObjectsNeeded, 'form.remove', 'object', 'number') | escape }}">
      {% for widget in form.npcObjectsNeeded.children %}
        {{ helper.widget_prototype(widget, 'form.remove', 'object', 'number')}}
      {% endfor %}
    </div>

    <div class="text-center">
      <button class="btn btn-default btn-add" data-target="objectsNeeded">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        {{ 'form.add.objectsNeeded' | trans }}
      </button>
      <div class="clearfix">&nbsp;</div>
    </div>

    <div id="objectsNeeded" data-prototype="{{ helper.widget_prototype(form.objectsNeeded, 'form.remove', 'object', 'number') | escape }}">
      {% for widget in form.npcObjectsNeeded.children %}
        {{ helper.widget_prototype(widget, 'form.remove', 'object', 'number')}}
      {% endfor %}
    </div>

    {{ form_widget(form._token) }}

    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">{{ 'save' | trans }}</button>
    </div>
  </form>
{% endblock %}

{% block javascripts %}
  <script type="text/javascript">
    DbaAdmin.quest($('#{{ form.image.vars.id }}'));
  </script>
{% endblock %}
