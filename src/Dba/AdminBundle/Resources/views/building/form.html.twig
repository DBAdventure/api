{% extends 'DbaAdminBundle::base.html.twig' %}

{% block body %}
  {% set currentPath = path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')) %}
  <form id="building-form" class="form-horizontal" method="post" action="{{ currentPath }}" autocomplete="off">
    <div class="col-sm-10 col-sm-offset-2">
      <img id="building-image-displayed" />
    </div>

    {{ form_row(form.name) }}
    {{ form_row(form.enabled) }}
    {{ form_row(form.map) }}
    {{ form_row(form.x) }}
    {{ form_row(form.y) }}
    {{ form_row(form.type) }}
    {{ form_row(form.image) }}

    {{ form_widget(form._token) }}

    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">{{ 'save' | trans }}</button>
    </div>
  </form>
{% endblock %}

{% block javascripts %}
  <script type="text/javascript">
    DbaAdmin.building($('#{{ form.image.vars.id }}'));
  </script>
{% endblock %}
